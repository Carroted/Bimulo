{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2021",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "../dist",
    "rootDir": "../",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
